<resources>

    <!-- Base application theme. -->
    <style name="CloudAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/header_color_cloud</item>
        <item name="colorPrimaryDark">@color/header_color_cloud</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Theme colors -->
        <item name="background_color">@color/background_cloud</item>
        <item name="font_color">@color/font_cloud</item>
        <item name="hint_color">@color/hint_cloud</item>
        <item name="border_color">@color/border_color_cloud</item>
    </style>

    <style name="LazuriteAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/header_color_lazurite</item>
        <item name="colorPrimaryDark">@color/header_color_lazurite</item>
        <item name="colorAccent">@color/font_white_content</item>

        <!-- Theme colors -->
        <item name="background_color">@color/background_lazurite</item>
        <item name="font_color">@color/font_lazurite</item>
        <item name="hint_color">@color/hint_lazurite</item>
        <item name="border_color">@color/border_lazurite</item>
    </style>

    <style name="UndergroundAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/header_color_underground</item>
        <item name="colorPrimaryDark">@color/header_color_underground</item>
        <item name="colorAccent">@color/font_white_content</item>

        <!-- Theme colors -->
        <item name="background_color">@color/background_underground</item>
        <item name="font_color">@color/font_underground</item>
        <item name="hint_color">@color/hint_underground</item>
        <item name="border_color">@color/border_underground</item>
    </style>



    <style name="CheckBoxDark" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:buttonTint">#000</item>
    </style>

    <style name="CheckBoxLight" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:buttonTint">#FFF</item>
    </style>

</resources>
